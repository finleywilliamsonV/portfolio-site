  body

    .container
      .row#navbar

        //- NAME
        .col-12
          //- name button
          button.btn.d-sm-none.navbar-btn#name-button finley williamson v

          //- name link
          a.navbar-link.d-none.d-sm-block#name finley williamson v

        //- PORTFOLIO
        .col-12
          //- portfolio button
          button.btn.d-sm-none.navbar-btn#portfolio-button portfolio

          //- portfolio link
          a.navbar-link.d-none.d-sm-block#portfolio-link portfolio
        
        //- ABOUT ME
        .col-12
          //- about me button
          button.btn.d-sm-none.navbar-btn#about-me-button about me

          //- about me link
          a.navbar-link.d-none.d-sm-block#about-me-link about me

        //- GITHUB
        .col.github-col
          //- github button
          a(href="https://github.com/finleywilliamsonV", target="_blank")
            button.btn.d-sm-none.navbar-btn#github-button
              i.fab.fa-github

          //- github link with hover
          a.d-none.d-sm-block#github-link(href="https://github.com/finleywilliamsonV", target="_blank")
            i.fab.fa-github
        
        //- EMAIL
        .col.email-col
          //- email button
          a(href="mailto:finley.williamson@gmail.com")
            button.btn.d-sm-none.p-0.navbar-btn#email-button
              i.far.fa-envelope
          
          //- email link with hover
          a.d-none.d-sm-block#email-link
            i.far.fa-envelope

